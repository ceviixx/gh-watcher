# Multiple repos comma-separated
REPOS=cli/cli,python/cpython

# Discord Webhook (required for real notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# Optional GitHub Token (only ONE token). If empty, the public API is used.
GITHUB_TOKEN=

# Poll interval in seconds
# 0 = run once and exit (recommended for GitHub Actions, Cron)
# >0 = continuous monitoring loop (recommended for Docker)
POLL_INTERVAL=300

# Release filter
ONLY_LATEST=false
INCLUDE_PRERELEASE=true
INCLUDE_DRAFT=false

# Events: new_release,new_asset,dl_increase
NOTIFY_ON=new_release,dl_increase,new_asset

# On first start: Skip existing releases (true) or report all (false)
SKIP_EXISTING_ON_INIT=true

# Asset filter (Regex, optional)
ASSET_NAME_INCLUDE=
ASSET_NAME_EXCLUDE=sha256|checksums?\.txt$

# Discord appearance
USE_EMBEDS=true
DISCORD_USERNAME=GH Release Bot
DISCORD_AVATAR_URL=https://avatars.githubusercontent.com/u/9919

# State directory for persistent storage (default: ./state)
STATE_DIR=/state

# Logging configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=/logs
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# PostgreSQL logging (optional)
# POSTGRES_DSN=postgresql://user:password@localhost:5432/dbname
# POSTGRES_TABLE=gh_watcher_logs
# Or with schema: POSTGRES_TABLE=monitoring.gh_watcher_logs

# HTTP & Logging
HTTP_TIMEOUT=20